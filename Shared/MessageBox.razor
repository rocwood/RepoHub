@namespace RepoHub

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="@Color" Class="mr-2" />
            @Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Class="mb-4">
            @foreach (var line in ContentText.Split('\n'))
            {
                @line
                <br />
            }
        </MudText>
        @if (!string.IsNullOrEmpty(AdditionalInfo))
        {
            <MudText>
                @foreach (var line in AdditionalInfo.Split('\n'))
                {
                    @line
                    <br />
                }
            </MudText>
        }
    </DialogContent>
    <DialogActions>
        @foreach (var action in Actions)
        {
            <MudButton Color="@action.Color" 
                      Variant="@action.Variant" 
                      OnClick="@(() => Submit(action.Value))"
                      StartIcon="@action.Icon">
                @action.Text
            </MudButton>
        }

        <MudButton OnClick="Cancel">È¡Ïû</MudButton>
    </DialogActions>
</MudDialog>
