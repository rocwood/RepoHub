@page "/"
@namespace RepoHub

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h2" Class="mb-8">欢迎使用 RepoHub</MudText>
    
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudPaper Class="pa-4" Elevation="3">
                <MudText Typo="Typo.h5" Class="mb-4">快速开始</MudText>
                <MudText>RepoHub是一个友好易用的Git多仓库管理工具。</MudText>
                <MudButton Class="mt-4" Variant="Variant.Filled" Color="Color.Primary" Href="/workspace">开始使用</MudButton>
            </MudPaper>
        </MudItem>
        
        <MudItem xs="12" sm="6">
            <MudPaper Class="pa-4" Elevation="3">
                <MudText Typo="Typo.h5" Class="mb-4">功能特点</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">一目了然：查看多个Git仓库状态</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">无缝衔接：调用你最熟悉的Git客户端进行操作</MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Check">界面优雅：响应式布局，以及 Material Design</MudListItem>
                </MudList>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
